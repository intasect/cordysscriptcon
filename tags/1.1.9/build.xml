<!--
	The default build file for Ant.
	!!DO NOT EDIT THIS FILE!!
	This file can be overwritten when an upgrade of the framework is done.
	
	Customizations should be done in the build-project.xml or the build-user.xml.
-->
<project default="all" basedir=".">
	<property environment="env" />
	
	<!-- 
		All the batch files specify the sdk.real.dir and the platform.real.dir via a
		-D properties. This makes sure that both relative and absolute paths work
	-->
	<dirname file="${sdk.real.dir}/build" property="sdk.dir"/>
	<dirname file="${platform.real.dir}/build" property="platform.dir"/>

	<property file="user.properties" />
	<property file="project.properties" />
	<property file="${project.site.settings.file}" />
	<!-- 
		Note: Do not use sdk.build.framework.dir for the framework.properties, since the 
		property is set in the framework.properties.
	-->
	<property file="${sdk.dir}/build/framework.properties" />
	<property file="${sdk.build.framework.dir}/content-handlers.properties" />
	
	<!-- Set the SVN version, if not yet set (default is 1.4) -->
	<property name="svn.lib.home" value="svn" />
	
	<!--Classpath used for compiling sources -->
	<path id="classpath">
		<fileset dir="${lib.dir}">    
            <include name="**/*.jar"/>
        </fileset>
		<fileset dir="${platform.dir}">    
            <include name="**/*.jar"/>
        </fileset>
		<fileset dir="${sdk.lib.dir}">
            <include name="**/*.jar"/>
			<exclude name="svn*/*.jar"/>
        </fileset>
		<fileset dir="${sdk.lib.dir}/${svn.lib.home}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

	<!-- Classpath used for compiling the testclasses -->
	<path id="testclasspath">
		<pathelement path="${build.classes}" />
    	<path refid="classpath" />
    </path>
	
	<!-- For debugging purposes write the classpath -->
	<property name="debug.classpath" refid="classpath"/>
	<property name="debug.testclasspath" refid="testclasspath"/>
  	<echo message="Classpath: ${debug.classpath}" level="debug"/>
	<echo message="Test-classpath: ${debug.testclasspath}" level="debug"/>
	
	<!--
		Import the different build files.
	-->
	<import file="${sdk.build.framework.dir}/task-defs.xml"/>
	<import file="build-user.xml" optional="true"/>	
	<import file="build-project.xml" optional="true"/>
	<import file="${sdk.build.framework.dir}/build-tocordys.xml"/>
	<import file="${sdk.build.framework.dir}/build-fromcordys.xml"/>	
	<import file="${sdk.build.framework.dir}/build-deletecordys.xml"/>
	<import file="${sdk.build.framework.dir}/build-toruntime.xml"/>
	<import file="${sdk.build.framework.dir}/build-framework.xml"/>
</project>	
